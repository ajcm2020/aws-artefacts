{
   "Version": "2012-10-17",
   "Statement": [
       {
           "Effect": "Allow",
           "Action": ["s3:ListBucket"],
           "Principal": {"AWS": "*"},
           "Resource": "<YOUR_BUCKET_ARN>"
       },
       {
           "Effect": "Allow",
           "Action": ["s3:GetObject", "s3:PutObject"],
           "Principal": {"AWS": "*"},
           "Resource": "<YOUR_BUCKET_ARN>/*"
       }
   ]
}